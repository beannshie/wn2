<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                                        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="FreeNote\FreeNoteBundle\Entity\Variant">
        <constraint name="Sylius\Bundle\AssortmentBundle\Validator\Constraint\VariantUnique">
            <option name="property">sku</option>
            <option name="message">sylius.variant.sku.unique</option>
        </constraint>
    </class>

    <class name="FreeNote\FreeNoteBundle\Entity\UserProfile">
        <property name="name">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerPP</value>
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.name.blank</option>
            </constraint>
        </property>
        <property name="surname">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerPP</value>
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.surname.blank</option>
            </constraint>
        </property>
        <property name="phoneNumber">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerPP</value>
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.phone_number.blank</option>
            </constraint>
        </property>
        <property name="avatar">
            <constraint name="File">
                <option name="maxSize">1024k</option>
                <option name="mimeTypes">
                    <value>image/gif</value>
                    <value>image/png</value>
                    <value>image/jpg</value>
                    <value>image/jpeg</value>
                </option>
            </constraint>
        </property>
        <property name="companyName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.company_name.blank</option>
            </constraint>
        </property>
        <property name="nip">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.nip.blank</option>
            </constraint>
        </property>
        <property name="regon">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.regon.blank</option>
            </constraint>
        </property>
    </class>

    <class name="FreeNote\FreeNoteBundle\Model\ArticleEntry">
        <property name="author">
            <constraint name="NotBlank">
                <option name="message">fn.entry.author.not_blank</option>
                <option name="groups">
                    <value>articleEntry</value>
                </option>
            </constraint>
        </property>
        <property name="title">
            <constraint name="NotBlank">
                <option name="message">fn.entry.title.not_blank</option>
                <option name="groups">
                    <value>allEntry</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">fn.entry.title.min_length</option>
                <option name="groups">
                    <value>allEntry</value>
                </option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">fn.entry.title.max_length</option>
                <option name="groups">
                    <value>allEntry</value>
                </option>
            </constraint>
        </property>
        <property name="content">
            <constraint name="NotBlank">
                <option name="message">fn.entry.content.not_blank</option>
                <option name="groups">
                    <value>allEntry</value>
                </option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">3</option>
                <option name="message">fn.entry.content.min_length</option>
                <option name="groups">
                    <value>allEntry</value>
                </option>
            </constraint>
        </property>

        <property name="image">
            <constraint name="File">
                <option name="maxSize">1024k</option>
                <option name="mimeTypes">
                    <value>image/gif</value>
                    <value>image/png</value>
                    <value>image/jpg</value>
                    <value>image/jpeg</value>
                </option>
                <option name="groups">
                    <value>allEntry</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="FreeNote\FreeNoteBundle\Entity\AdvertisementEntry">
        <property name="price">
            <constraint name="Min">
                <option name="limit">0</option>
                <option name="message">fn.entry.price.not_negative</option>
                <option name="groups">
                    <value>allEntry</value>
                </option>
            </constraint>
        </property>
    </class>

    <class name="FreeNote\FreeNoteBundle\Entity\ArticleCategory">
        <property name="image">
            <constraint name="File">
                <option name="maxSize">1024k</option>
                <option name="mimeTypes">
                    <value>image/gif</value>
                    <value>image/png</value>
                    <value>image/jpg</value>
                    <value>image/jpeg</value>
                </option>
            </constraint>
        </property>
        <constraint name="Callback">
            <option name="methods">
                <value>isAncestorValid</value>
            </option>
        </constraint>
    </class>

    <class name="FreeNote\FreeNoteBundle\Entity\NewsCategory">
        <property name="image">
            <constraint name="File">
                <option name="maxSize">1024k</option>
                <option name="mimeTypes">
                    <value>image/gif</value>
                    <value>image/png</value>
                    <value>image/jpg</value>
                    <value>image/jpeg</value>
                </option>
            </constraint>
        </property>
        <constraint name="Callback">
            <option name="methods">
                <value>isAncestorValid</value>
            </option>
        </constraint>
    </class>

    <class name="FreeNote\FreeNoteBundle\Entity\EventCategory">
        <property name="image">
            <constraint name="File">
                <option name="maxSize">1024k</option>
                <option name="mimeTypes">
                    <value>image/gif</value>
                    <value>image/png</value>
                    <value>image/jpg</value>
                    <value>image/jpeg</value>
                </option>
            </constraint>
        </property>
        <constraint name="Callback">
            <option name="methods">
                <value>isAncestorValid</value>
            </option>
        </constraint>
    </class>

    <class name="FreeNote\FreeNoteBundle\Entity\AdvertisementCategory">
        <property name="image">
            <constraint name="File">
                <option name="maxSize">1024k</option>
                <option name="mimeTypes">
                    <value>image/gif</value>
                    <value>image/png</value>
                    <value>image/jpg</value>
                    <value>image/jpeg</value>
                </option>
            </constraint>
        </property>
        <constraint name="Callback">
            <option name="methods">
                <value>isAncestorValid</value>
            </option>
        </constraint>
    </class>

    <class name="FreeNote\FreeNoteBundle\Entity\MusicGenre">
        <property name="image">
            <constraint name="File">
                <option name="maxSize">1024k</option>
                <option name="mimeTypes">
                    <value>image/gif</value>
                    <value>image/png</value>
                    <value>image/jpg</value>
                    <value>image/jpeg</value>
                </option>
            </constraint>
        </property>
        <constraint name="Callback">
            <option name="methods">
                <value>isAncestorValid</value>
                <value>isOriginValid</value>
            </option>
        </constraint>
    </class>

</constraint-mapping>

