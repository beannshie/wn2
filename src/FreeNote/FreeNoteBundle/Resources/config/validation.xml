<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                                        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="FreeNote\FreeNoteBundle\Entity\Variant">
        <constraint name="Sylius\Bundle\AssortmentBundle\Validator\Constraint\VariantUnique">
            <option name="property">sku</option>
            <option name="message">sylius.variant.sku.unique</option>
        </constraint>
    </class>

    <class name="FreeNote\FreeNoteBundle\Model\UserProfile">
        <property name="name">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerPP</value>
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.register.name.blank</option>
            </constraint>
        </property>
        <property name="surname">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerPP</value>
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.register.surname.blank</option>
            </constraint>
        </property>
        <property name="phoneNumber">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerPP</value>
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.register.phone_number.blank</option>
            </constraint>
        </property>
        <property name="avatar">
            <constraint name="File">
                <option name="maxSize">1024k</option>
                <option name="mimeTypes">
                    <value>gif</value>
                    <value>png</value>
                    <value>jpg</value>
                    <value>jpeg</value>
                </option>
            </constraint>
        </property>
        <property name="companyName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.register.company_name.blank</option>
            </constraint>
        </property>
        <property name="nip">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.register.nip.blank</option>
            </constraint>
        </property>
        <property name="regon">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerCO</value>
                </option>
                <option name="message">fn.user.register.regon.blank</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>

