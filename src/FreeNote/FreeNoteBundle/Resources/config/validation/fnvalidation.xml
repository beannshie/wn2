<?xml version="1.0" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="FreeNote\FreeNoteBundle\Model\UserProfile">
        <property name="name">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerPP</value>
                    <value>buyerCO</value>
                </option>
                <option name="message">
                    <value>fn.user.register.name.blank</value>
                </option>
            </constraint>
        </property>
        <property name="surname">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerPP</value>
                    <value>buyerCO</value>
                </option>
                <option name="message">
                    <value>fn.user.register.surname.blank</value>
                </option>
            </constraint>
        </property>
        <property name="phoneNumber">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerPP</value>
                    <value>buyerCO</value>
                </option>
                <option name="message">
                    <value>fn.user.register.phone_number.blank</value>
                </option>
            </constraint>
        </property>
        <property name="avatar">
            <constraint name="File">
                <option name="maxSize">1024k</option>
                <option name="mimeTypes">
                    <value>gif</value>
                    <value>png</value>
                    <value>jpg</value>
                    <value>jpeg</value>
                </option>
            </constraint>
        </property>
        <property name="companyName">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerCO</value>
                </option>
                <option name="message">
                    <value>fn.user.register.company_name.blank</value>
                </option>
            </constraint>
        </property>
        <property name="nip">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerCO</value>
                </option>
                <option name="message">
                    <value>fn.user.register.nip.blank</value>
                </option>
            </constraint>
        </property>
        <property name="regon">
            <constraint name="NotBlank">
                <option name="groups">
                    <value>buyerCO</value>
                </option>
                <option name="message">
                    <value>fn.user.register.regon.blank</value>
                </option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
