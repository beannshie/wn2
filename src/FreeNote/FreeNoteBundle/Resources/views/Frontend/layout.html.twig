<!DOCTYPE html>

{% set generalSettings = sylius_settings_all('general') %}

<html>
    <head>
        <title>
            {% block title %}
                {{ generalSettings.defaultMetaTitle|default('Wolna Nuta') }}
            {% endblock %}
        </title>
        <meta charset="UTF-8">
        <meta name="description" content="{{ generalSettings.defaultMetaDescription }}">
        <meta name="keywords" content="{{ generalSettings.defaultMetaKeywords }}">

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        {% block stylesheets %}
        {% stylesheets output='assets/compiled/frontend.css'
            '@FreeNoteBundle/Resources/assets/css/bootstrap.css'
            'http://netdna.bootstrapcdn.com/font-awesome/2.0/css/font-awesome.css'
            '@FreeNoteBundle/Resources/assets/css/select2.css'
            '@FreeNoteBundle/Resources/assets/css/comments.css'
            '@FreeNoteBundle/Resources/assets/css/main.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}

        {% stylesheets output='assets/compiled/frontend.less'
            '@FreeNoteBundle/Resources/assets/less/frontend.less'
        %}
            <link rel="stylesheet/less" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        <div id="main-graphic">
            <div id="main-content">
                <div class="current_width_back">
                    <div id="logo"><img src="{{ asset('assets/img/logo.png') }}" alt="Wolna Nuta" /></div>
                    <div class="navbar navbar-fixed-top">
                        <div class="toppanel_top"></div>
                        <div class="navbar-inner">
                            <div class="current_width">
                                <div class="container-fluid">
                                    {% include 'FreeNoteBundle:Frontend/Main:topbar.html.twig' %}
                                    {#<a class="brand" href="http://sylius.org">Sylius</a>#}
                                    {#{{ knp_menu_render('FreeNoteBundle:Builder:frontendMainMenu', {'template': 'FreeNoteBundle:Menu:main.html.twig', 'currentClass': 'active'}) }}#}
                                </div>
                            </div>
                        </div>
                        <div class="navbar-underline"></div>
                    </div>
                    <div id="menu_min" class="current_width">
                        {% include 'FreeNoteBundle:Frontend/Main:minimenu.html.twig' %}
                    </div>
                    <div class="current_width_back">
                        <div id="main_menu">
                            {{ knp_menu_render('FreeNoteBundle:Builder:frontendMainMenu', {'template': 'FreeNoteBundle:Menu:mainmenu.html.twig', 'currentClass': 'active'}) }}
                        </div>
                        <div id="content_back" class="current_width">
                            <div class="container-fluid">
                                <div class="row-fluid">
                                    <div id="toplayer">
                                        <div id="player"><img src="{{ asset('assets/img/player.png') }}" alt="Wolna Nuta - player" /></div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div id="page_container">
                                        <div id="sidebar" class="span2">
                                            {% from 'MopaBootstrapBundle::flash.html.twig' import flash %}
                                            {% for name, value in app.session.flashes if name in ['success', 'error'] %}
                                                {{ flash(name, value|trans, true) }}
                                            {% endfor %}
                                            {% block sidebar %}
                                                {% include 'FreeNoteBundle:Frontend:sidebar.html.twig' %}
                                            {% endblock %}
                                            <hr />
                                            <footer>
                                                <p>&copy; <a href="#">Wolna Nuta</a>, 2013 - {{ 'now'|date('Y') }}.</p>
                                            </footer>
                                        </div>
                                        <div id="content" class="span10 boxy">
                                            {% block content %}
                                            {% endblock %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% block javascripts %}
        {% javascripts output='assets/compiled/frontend.js'
            'http://code.jquery.com/jquery-1.8.0.min.js'
            'http://cdnjs.cloudflare.com/ajax/libs/less.js/1.3.1/less.min.js'
            '@FreeNoteBundle/Resources/assets/js/bootstrap.min.js'
            '@FreeNoteBundle/Resources/assets/js/select2.min.js'
            '@FreeNoteBundle/Resources/assets/js/sylius-addressing.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock %}
    </body>
</html>
