{% extends 'knp_menu.html.twig' %}

{% block label %}
    {% if item.labelAttribute('is_rootcat') %}
        {% set icon = item.labelAttribute('icon') %}
        <img src="{{ attribute(icon, 'webPath') is empty ? 'http://placehold.it/70x40' : (attribute(icon, 'webPath'))|apply_filter('icon_mg') }}"
             alt="{{ attribute(icon, 'alt') }}" title="{{ attribute(icon, 'title') }}" class="main_icon" />
    {% endif %}
    {{ item.label|upper }}
{% endblock %}