{% extends 'FreeNoteBundle:Frontend:layout.html.twig' %}

{% block content %}

    <div id="leftbar">
        {% from 'MopaBootstrapBundle::flash.html.twig' import flash %}
        {% for name, value in app.session.flashes if name in ['success', 'error'] %}
            {{ flash(name, value|trans, true) }}
        {% endfor %}
        {% block sidebar %}
            {% include 'FreeNoteBundle:Frontend:sidebar.html.twig' %}
        {% endblock %}
        <hr />
    </div>


<div class="page-header">
  <h1>Wolna Nuta <small>Recent products</small></h1>
</div>

<div class="alert alert-info">
Cudowny zajebiaszczy kude bele OUR BELOVED projekt of Wolna Nuta:)
</div>

<hr />

<div class="product-grid">
    <div class="fluid-row" style="overflow: hidden;">
        {% for product in recentProducts %}

        <div class="span3 well well-small">
            <a href="{{ path('free_note_product_show', {'slug': product.slug})}}" class="thumbnail" style="width: 130px; height: 75px;">
                <img src="{{ product.imageWebPath|apply_filter('frontend_box') }}" alt="" />
            </a>
            <hr />

                <h4>
                    <a href="{{ path('free_note_product_show', {'slug': product.slug})}}">
                        {{ product.name|slice(0, 20) }}...
                    </a>
                </h4>

            <p>{{ product.description|slice(0, 50) }}...</p>
            <p><a href="{{ path('free_note_product_show', {'slug': product.slug})}}" class="btn pull-right">Read more</a>
        </div>

        {% if loop.index % 4 == 0 %}
        </div>
        <div class="fluid-row">
        {% endif %}

        {% endfor %}
    </div>
</div>
{% endblock %}
