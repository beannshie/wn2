{% extends 'FreeNoteBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Blog category<small> List of all posts in this category</small></h1>
{% endblock %}

{% block content %}
<div class="well">
<a href="{{ path('free_note_backend_article_entry_create') }}" class="btn btn-primary large">
    <i class="icon-plus icon-white"></i> create post
</a>
</div>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "previous page...", 'next_message': "next page..."}) }}
{% endif %}

{% if entries|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>#id</th>
            <th>title</th>
            <th>author</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for entry in entries %}
            <tr>
                <td>{{ entry.id }}</td>
                <td>{{ entry.title }}</td>
                <td>{{ entry.author }}</td>
                <td>
                    <div class="pull-right btn-group">
                        <a href="{{ path('free_note_backend_article_entry_show', {'id': entry.id}) }}" class="btn">
                            <i class="icon-book"></i> read
                        </a>
                        <a href="{{ path('free_note_backend_article_entry_update', {'id': entry.id}) }}" class="btn">
                            <i class="icon-pencil"></i> update
                        </a>
                        <a href="{{ path('free_note_backend_article_entry_delete', {'id': entry.id}) }}" class="btn btn-danger confirmer"
                            data-toggle="modal"
                            data-target="confirmer-modal"
                            data-confirmer-question="Are you sure you want to delete this post?"
                        >
                            <i class="icon-remove icon-white"></i> delete
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">{{ 'alert.heading.info'|trans({}, 'SandboxCoreBundle') }}.</h4>
    There are no posts to display.
</div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap', {'prev_message': "previous page...", 'next_message': "next page..."}) }}
{% endif %}

{% endblock %}
