<!DOCTYPE html>

<html>
    <head>
        <title>{% block title %}Wolna Nuta - panel administracyjny.{% endblock %}</title>
        <meta charset="UTF-8">

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        {% block stylesheets %}
        {% stylesheets output='assets/compiled/backend.css'
            '@FreeNoteBundle/Resources/assets/css/bootstrap.no-icons.min.css'
            '@FreeNoteBundle/Resources/assets/css/font-awesome.css'
            '@FreeNoteBundle/Resources/assets/css/select2.css'
            '@FreeNoteBundle/Resources/assets/css/backend-main.css'
            '@FreeNoteBundle/Resources/assets/css/main.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% stylesheets output='assets/compiled/backend.less'
            '@FreeNoteBundle/Resources/assets/less/backend.less'
        %}
            <link rel="stylesheet/less" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% javascripts output='assets/compiled/backend.js'
            '@FreeNoteBundle/Resources/assets/js/jquery-1.8.0.min.js'
            '@FreeNoteBundle/Resources/assets/js/less.min.js'
            '@FreeNoteBundle/Resources/assets/js/bootstrap.fn.js'
            '@FreeNoteBundle/Resources/assets/js/sylius-addressing.js'
            '@FreeNoteBundle/Resources/assets/js/select2.min.js'
            '@FreeNoteBundle/Resources/assets/js/backend.js'
            '@FreeNoteBundle/Resources/assets/js/menu.fn.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </head>
    <body>
        <div id="confirmer-modal" class="modal hide fade">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">Ã—</a>
                <h3>{{ ('confirmer.header')|trans({}, 'FreeNoteCoreBundle') }}</h3>
            </div>
            <div class="modal-body">
                <p class="confirmer-modal-question">Are you sure about that?</p>
            </div>
            <div class="modal-footer">
                <a class="confirmer-modal-confirm btn btn-primary">{{ 'yes'|trans({}, 'FreeNoteCoreBundle') }}</a>
                <a class="btn" data-dismiss="modal">{{ 'cancel'|trans({}, 'FreeNoteCoreBundle') }}</a>
            </div>
        </div>
        <div class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
            <div  id="fn-navbar-top">
                <div class="container-fluid">
                    {{ knp_menu_render('FreeNoteBundle:Builder:backendMainMenu', {'template': 'FreeNoteBundle:Backend/Menu:main.html.twig', 'currentClass': 'active'}) }}
                </div>
            </div>
            </div>
        </div>
        <div id="userinfo_bar">
            <div class="container-fluid">
                {{ knp_menu_render('FreeNoteBundle:Builder:backendProfileMenu', {'template': 'FreeNoteBundle:Backend/Menu:main.html.twig', 'currentClass': 'active'}) }}
            </div>
        </div>
        <div id="container-back">
            <div id="menubar">
                {% block sidebar %}
                    <div class="sidebar-nav well shop_well">
                        {{ knp_menu_render('FreeNoteBundle:Builder:backendShopMenu', {'template': 'FreeNoteBundle:Backend/Menu:sidebar.html.twig', 'currentClass': 'active'}) }}
                    </div>
                    <div class="sidebar-nav well music_well">
                        {{ knp_menu_render('FreeNoteBundle:Builder:backendMusicMenu', {'template': 'FreeNoteBundle:Backend/Menu:sidebar.html.twig', 'currentClass': 'active'}) }}
                    </div>
                    <div class="sidebar-nav well user_well">
                        {{ knp_menu_render('FreeNoteBundle:Builder:backendRestMenu', {'template': 'FreeNoteBundle:Backend/Menu:sidebar.html.twig', 'currentClass': 'active'}) }}
                    </div>
                {% endblock %}
            </div>
            <div id="content">
                <div class="container-fluid">
                    <div class="row-fluid">
                        <div id="content-inner">
                            <div class="page-header">
                                {% block header %}<h1>Wolna Nuta<small> Panel administratora</small></h1>{% endblock %}
                            </div>
                            <hr>
                            <div class="content_text">
                                {% from 'MopaBootstrapBundle::flash.html.twig' import flash %}
                                {% for name, value in app.session.flashes if name in ['success', 'error'] %}
                                    {{ flash(name, value|trans, true) }}
                                {% endfor %}
                                {% block content %}
                                {% endblock %}
                            </div>
                        </div>
                        <hr>
                        <footer>
                            <p>&copy; <a href="{{ path('free_note_core_frontend') }}">Wolna Nuta</a>, 2013 - {{ 'now'|date('Y') }}.</p>
                        </footer>
                    </div>
                </div>
            </div>
            <div id="infobar">
            </div>
        </div>
    </body>
</html>
