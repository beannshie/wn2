<!DOCTYPE html>

<html>
    <head>
        <title>{% block title %}Wolna Nuta - panel administracyjny.{% endblock %}</title>
        <meta charset="UTF-8">

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        {% block stylesheets %}
        {% stylesheets output='assets/compiled/backend.css'
            'http://netdna.bootstrapcdn.com/twitter-bootstrap/2.1.1/css/bootstrap.no-icons.min.css'
            'http://netdna.bootstrapcdn.com/font-awesome/2.0/css/font-awesome.css'
            '@FreeNoteBundle/Resources/assets/css/select2.css'
            '@FreeNoteBundle/Resources/assets/css/backend-main.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% stylesheets output='assets/compiled/backend.less'
            '@FreeNoteBundle/Resources/assets/less/backend.less'
        %}
            <link rel="stylesheet/less" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        <div id="confirmer-modal" class="modal hide fade">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">Ã—</a>
                <h3>Confirm your action</h3>
            </div>
            <div class="modal-body">
                <p class="confirmer-modal-question">Are you sure about that?</p>
            </div>
            <div class="modal-footer">
                <a class="confirmer-modal-confirm btn btn-primary">{{ 'yes'|trans({}, 'FreeNoteCoreBundle') }}</a>
                <a class="btn" data-dismiss="modal">{{ 'cancel'|trans({}, 'FreeNoteCoreBundle') }}</a>
            </div>
        </div>
        <div class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="brand" href="{{ path('free_note_core_frontend') }}">Wolna Nuta</a>
                    {{ knp_menu_render('FreeNoteBundle:Builder:backendMainMenu', {'template': 'FreeNoteBundle:Menu:main.html.twig', 'currentClass': 'active'}) }}
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div id="sidebar" class="span2">
                    <div class="sidebar-nav well">
                    {% block sidebar %}
                        {{ knp_menu_render('FreeNoteBundle:Builder:backendSidebarMenu', {'template': 'FreeNoteBundle:Menu:sidebar.html.twig', 'currentClass': 'active'}) }}
                    {% endblock %}
                    </div>
                </div>
                <div id="content" class="span10">
                    <div id="content-inner">
                        <div class="page-header">
                            {% block header %}<h1>Wolna Nuta<small> Panel administratora</small></h1>{% endblock %}
                        </div>
                        {% from 'MopaBootstrapBundle::flash.html.twig' import flash %}
                        {% for name, value in app.session.flashes if name in ['success', 'error'] %}
                            {{ flash(name, value|trans, true) }}
                        {% endfor %}
                        {% block content %}
                        {% endblock %}
                    </div>
                    <hr>
                    <footer>
                        <p>&copy; <a href="{{ path('free_note_core_frontend') }}">Wolna Nuta</a>, 2013 - {{ 'now'|date('Y') }}.</p>
                    </footer>
                </div>
            </div>
        </div>
        {% block javascripts %}
        {% javascripts output='assets/compiled/backend.js'
            'http://code.jquery.com/jquery-1.8.0.min.js'
            'http://cdnjs.cloudflare.com/ajax/libs/less.js/1.3.1/less.min.js'
            'http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.1/js/bootstrap.min.js'
            '@FreeNoteBundle/Resources/assets/js/sylius-addressing.js'
            '@FreeNoteBundle/Resources/assets/js/select2.min.js'
            '@FreeNoteBundle/Resources/assets/js/backend.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        {% endblock %}
    </body>
</html>
