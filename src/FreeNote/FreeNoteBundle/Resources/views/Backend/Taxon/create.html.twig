{% extends 'FreeNoteBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Creating taxon</h1>
{% endblock %}

{% set taxonomy = taxon.taxonomy %}

{% block content %}
<form action="{{ path('free_note_backend_taxon_create', {'taxonomyId': taxonomy.id}) }}" method="post" class="form-horizontal" novalidate>
    {% include 'FreeNoteBundle:Backend/Taxon:_form.html.twig' %}
    <div class="form-actions">
       <input type="submit" value="Create taxon" class="btn btn-large btn-primary" />
       &nbsp;
       <input type="reset" value="cancel" class="btn btn-large" />
    </div>
</form>
{% endblock %}
