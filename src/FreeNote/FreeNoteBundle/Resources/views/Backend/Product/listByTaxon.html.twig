{% extends 'FreeNoteBundle:Backend:layout.html.twig' %}

{% import 'FreeNoteBundle:Backend/Product:macros.html.twig' as macros %}

{% block header %}
    <h1>Assortment by {{ taxon.taxonomy.name|lower }} <small> List of all products categorized under "{{ taxon.name }}"</small></h1>
{% endblock %}

{% block content %}
<div class="well">
    <a href="{{ path('free_note_backend_product_create') }}" class="btn btn-primary">
        <i class="icon-plus icon-white"></i> create product
    </a>
    {% if not app.request.query.get('deleted') %}
    <a href="{{ path('free_note_backend_product_list', {'deleted': true}) }}" class="btn">
        <i class="icon-trash"></i> show deleted products
    </a>
    {% else %}
    <a href="{{ path('free_note_backend_product_list', {'deleted': false}) }}" class="btn">
        <i class="icon-trash"></i> hide deleted products
    </a>
    {% endif %}
</div>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{{ macros.list(products, false)  }}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{% endblock %}
