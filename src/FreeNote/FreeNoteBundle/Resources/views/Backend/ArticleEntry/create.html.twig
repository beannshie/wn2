{% extends 'FreeNoteBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>{{ ('entry.new_header')|trans({}, 'FreeNoteCoreBundle') }}</h1>
{% endblock %}

{% block content %}
<form action="{{ path('free_note_backend_article_entry_create') }}" {{ form_enctype(form) }} method="post" class="form-horizontal" novalidate>
    {% include 'FreeNoteBundle:Backend/ArticleEntry:_form.html.twig' %}
    <div class="form-actions">
        <input type="submit" class="btn btn-large btn-primary" value="{{ 'create'|trans({}, 'FreeNoteCoreBundle') }}">
        <a href="
            {% if (app.request.server.get('HTTP_REFERER')) is not empty %}
                {{ (app.request.server.get('HTTP_REFERER')) }}
            {% else %}
                {{ path('free_note_backend_article_entry_list') }}
            {% endif %}
            " class="btn btn-large">{{ 'cancel'|trans({}, 'FreeNoteCoreBundle') }}</a>
    </div>
</form>
{% endblock %}
