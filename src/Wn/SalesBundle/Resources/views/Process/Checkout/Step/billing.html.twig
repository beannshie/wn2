{% extends 'SandboxCoreBundle:Frontend:layout.html.twig' %}

{% block content %}
<div class="page-header">
<h1>Płatność <small>Wybierz preferowaną metodę płatności</small></h1>
</div>

{% include 'SandboxSalesBundle:Process/Checkout/Step:_progressBar.html.twig' %}

<form method="post" action="{{ path('sylius_sandbox_checkout_forward', {'stepName': context.currentStep.name}) }}" class="form-horizontal" novalidate>
<fieldset>
    {{ form_row(form.firstname, {'attr': {'class': 'span6'}}) }}
    {{ form_row(form.lastname, {'attr': {'class': 'span6'}}) }}
    {{ form_row(form.city, {'attr': {'class': 'span5'}}) }}
    {{ form_row(form.street, {'attr': {'class': 'span5'}}) }}
    {{ form_row(form.postcode, {'attr': {'class': 'span3'}}) }}
    {{ form_rest(form) }}
</fieldset>
<div class="form-actions">
    <a href="{{ path('sylius_sandbox_checkout_display', {'stepName': context.previousStep.name}) }}" class="btn btn-large">powrót</a> &nbsp;
    <input type="submit" class="btn btn-primary btn-large" value="dalej" />
</div>
</form>
{% endblock %}
