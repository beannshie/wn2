{% extends 'SandboxCoreBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Lista adresatów <small>Wszystkie adresy dostępne w systemie</small></h1>
{% endblock %}

{% block content %}
<div class="well">
<a href="{{ path('sylius_addressing_backend_address_create') }}" class="btn btn-primary">
    <i class="icon-plus icon-white"></i> dodaj adres
</a>
</div>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{% if addresses|length > 0 %}
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'id', 'order': sorter.order}) }}">#id</a></th>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'firstname', 'order': sorter.order}) }}">imię</a></th>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'lastname', 'order': sorter.order}) }}">nazwisko</a></th>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'city', 'order': sorter.order}) }}">miasto</a></th>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'street', 'order': sorter.order}) }}">ulica</a></th>
            <th><a href="{{ path('sylius_addressing_backend_address_list', {'sort': 'postcode', 'order': sorter.order}) }}">kod pocztowy</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for address in addresses %}
        <tr>
            <td>{{ address.id }}</td>
            <td>{{ address.firstname }}</td>
            <td>{{ address.lastname }}</td>
            <td>{{ address.city }}</td>
            <td>{{ address.street }}</td>
            <td>{{ address.postcode }}</td>
            <td>
                <div class="btn-group pull-right">
                    <a href="{{ path('sylius_addressing_backend_address_show', {'id': address.id}) }}" class="btn">
                        <i class="icon-book"></i> szczegóły
                    </a>
                    <a href="{{ path('sylius_addressing_backend_address_update', {'id': address.id}) }}" class="btn">
                        <i class="icon-pencil"></i> edycja
                    </a>
                    <a href="{{ path('sylius_addressing_backend_address_delete', {'id': address.id}) }}"  class="btn btn-danger confirmer"
                        data-confirmer-question="Czy na pewno chcesz usunąć adresata <strong>{{ address.firstname ~ ' ' ~ address.lastname }}</strong>?"
                    >
                        <i class="icon-trash icon-white"></i>
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">Information</h4>
    Your address book is empty
</div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{% endblock %}
