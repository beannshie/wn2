{% extends 'SandboxCoreBundle:Frontend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1>Logowanie <small>Wolna Nuta - administracja</small></h1>
</div>

{% if error %}
<div class="alert alert-error">
    {{ error|trans({}, 'FOSUserBundle') }}
</div>
{% endif %}

<form action="{{ path('fos_user_security_login') }}" method="post" class="well">
<fieldset>
    <div class="control-group">
    <label for="username" class="control-label">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
    <div class="controls">
        <input type="text" id="username" name="_username" value="{{ last_username }}" />
    </div>
    </div>
    <div class="control-group">
    <label for="password" class="control-label">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
    <div class="controls">
        <input type="password" id="password" name="_password" />
    </div>
    </div>
    <div class="control-group">
    <div class="controls">
        {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }} <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    </div>
    </div>
</fieldset>
<div class="form-actions">
    <input type="submit" class="btn btn-primary btn-large" name="login" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
</div>
</form>

{% endblock %}
