{% extends 'SyliusSandboxBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Editing tax category <small>"{{ category.name }}"</small></h1>
{% endblock %}

{% block content %}
<form action="{{ path('sylius_sandbox_backend_tax_category_update', {'id': category.id}) }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusSandboxBundle:Backend/TaxCategory:_form.html.twig' %}
    <div class="form-actions">
       <input type="submit" value="save changes" class="btn btn-primary btn-large" />
    </div>
</form>
{% endblock %}
