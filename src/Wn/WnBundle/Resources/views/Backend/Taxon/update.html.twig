{% extends 'SyliusSandboxBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Taxon updating <small>Use this form to edit existing taxon</small></h1>
{% endblock %}

{% set taxonomy = taxon.taxonomy %}

{% block content %}
<form action="{{ path('sylius_sandbox_backend_taxon_update', {'taxonomyId': taxonomy.id, 'id': taxon.id}) }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusSandboxBundle:Backend/Taxon:_form.html.twig' %}
    <div class="form-actions">
       <input type="submit" value="save changes" class="btn btn-large btn-primary" />
       &nbsp;
       <a href="{{ path('sylius_sandbox_backend_taxonomy_list')}}" class="btn btn-large">cancel</a>
    </div>
</form>
{% endblock %}
