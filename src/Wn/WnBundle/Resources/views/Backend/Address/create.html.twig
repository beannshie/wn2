{% extends 'SyliusSandboxBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Creating address <small>Use this form to add new item to address book</small></h1>
{% endblock %}

{% block content %}
<form action="{{ path('sylius_sandbox_backend_address_create') }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusSandboxBundle:Backend/Address:_form.html.twig' %}
    <div class="form-actions">
       <input type="submit" value="create address" class="btn btn-large btn-primary" />
       &nbsp;
       <input type="reset" value="cancel" class="btn btn-large" />
    </div>
</form>
{% endblock %}
