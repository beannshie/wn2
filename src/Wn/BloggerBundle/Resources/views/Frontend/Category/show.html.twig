{% extends 'SandboxCoreBundle:Frontend:layout.html.twig' %}

{% block content %}
<div class="page-header">
<h1>Kategoria <small>Lista wpisów</small></h1>
</div>

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}

{% if posts %}
    {% for post in posts %}
        {% include 'SandboxBloggerBundle:Frontend/Post:single.html.twig' %}
    {% endfor %}
{% else %}
    <div class="alert alert-info">
        Brak wpisów do wyświetlenia.
    </div>
{% endif %}

{% if paginator.haveToPaginate() %}
{{ pagerfanta(paginator, 'twitter_bootstrap_translated') }}
{% endif %}
{% endblock %}
