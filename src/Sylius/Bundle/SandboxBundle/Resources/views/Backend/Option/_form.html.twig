<fieldset>
    {{ form_errors(form) }}
    {% form_theme form _self %}

    {{ form_row(form.name, {'attr': {'class': 'span4'}}) }}
    {{ form_row(form.presentation, {'attr': {'class': 'span6'}}) }}
    <hr />
    <div id="sylius-assortment-option-values" class="collection-container" data-prototype="{{ form_widget(form.values.vars.prototype)|e }}">
        {% for valueForm in form.values %}
            {{ form_widget(valueForm)  }}
        {% endfor %}
    </div>
    <div class="control-group">
        <div class="controls">
            <a class="btn btn-success collection-add-btn" data-collection="sylius-assortment-option-values">add value</a>
        </div>
    </div>
</fieldset>

{{ form_widget(form._token) }}
