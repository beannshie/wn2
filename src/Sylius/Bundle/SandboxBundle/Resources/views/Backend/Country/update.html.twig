{% extends 'SyliusSandboxBundle:Backend:layout.html.twig' %}

{% block header %}
    <h1>Country updating <small>Use this form to edit existing country</small></h1>
{% endblock %}

{% block content %}
<form action="{{ path('sylius_sandbox_backend_country_update', {'id': country.id}) }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusSandboxBundle:Backend/Country:_form.html.twig' %}
    <div class="form-actions">
       <input type="submit" value="save changes" class="btn btn-large btn-primary" />
       &nbsp;
       <a href="{{ path('sylius_sandbox_backend_country_list') }}" class="btn btn-large">cancel</a>
    </div>
</form>
{% endblock %}
